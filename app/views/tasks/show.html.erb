<div class="container">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title"><%= @task.title %></h1>
      <p class="card-text"><%= @task.details %></p>
      <strong class="card-text"><%= @task.completed ? "Completed" : "Task not completed" %></strong>
      <br>
      <%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-primary" %>
      <%= link_to "Back to List", tasks_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
