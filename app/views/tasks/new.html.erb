<div class="container">
  <h1>New Task</h1>
  <%= form_with model: @task, url: tasks_path, method: :post, class: "form" do |task| %>
    <div class="form-group">
      <%= task.label :title, class: "font-weight-bold" %>
      <%= task.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= task.label :details, class: "font-weight-bold" %>
      <%= task.text_field :details, class: "form-control" %>
    </div>
    <%= task.submit "Create Task", class: "btn btn-primary" %>
    <%= link_to "Back to List", tasks_path, class: "btn btn-secondary" %>
  <% end %>
</div>
