<h1> NEW TASK </h1>

<%= form_with model: @task, url: create_task_path, method: :post do |task| %>
  <%= task.label :title %>
  <%= task.text_field :title %>
  <%= task.label :details %>
  <%= task.text_field :details %>
  <%= task.submit "Create Task" %>
<% end %>

<%= link_to "Back to List", tasks_path %>
