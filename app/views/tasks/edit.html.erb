<div class="container">
  <h1>EDIT TASK</h1>
  <%= form_with model: @task, url: task_path(@task), method: :patch do |task| %>
    <div class="form-group">
      <%= task.label :title %>
      <%= task.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= task.label :details %>
      <%= task.text_field :details, class: "form-control" %>
    </div>
    <div class="form-group form-check">
      <%= task.check_box :completed, class: "form-check-input", checked: @task.completed? %>
      <%= task.label :completed, class: "form-check-label" %>
    </div>
    <%= task.submit "Confirm Edit", class: "btn btn-primary" %>
    <%= link_to "Back to List", tasks_path, class: "btn btn-secondary" %>
  <% end %>
</div>
